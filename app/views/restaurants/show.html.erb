<div class="m-5">
<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %> - <%= @restaurant.phone_number%></p>
<%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<br></br>
<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>
      <%= link_to "Remove",
      review_path(review),
      method: :delete,
      data: {confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>
</div>
